# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=4000

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://tea:tea123@localhost:5432/tea_db

# ============================================
# EMAIL CONFIGURATION (Gmail SMTP)
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-here
EMAIL_FROM=noreply@yourdomain.com

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate a strong secret key using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRY=7d
JWT_REFRESH_TOKEN_EXPIRY=30d

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGIN=https://teaapp.twaasol.com

# ============================================
# SUPER ADMIN
# ============================================
SUPER_ADMIN_SECRET_KEY=your-super-admin-secret-key-here

# ============================================
# OPTIONAL: LOGGING
# ============================================
# LOG_LEVEL=info
# LOG_FILE=./logs/app.log

# ============================================
# OPTIONAL: RATE LIMITING
# ============================================
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
